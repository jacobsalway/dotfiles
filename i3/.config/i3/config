# === basic i3 gaps ===

hide_edge_borders both
for_window [class="^.*"] border pixel 0
gaps inner 6
gaps outer 3
smart_gaps on
font pango:monospace 9
set $mod Mod1
set $sup Mod4
#set $term urxvt
set $term st
set $browser firefox 

# === external scripts ===

# music player daemon
exec --no-startup-id mpd

# composite manager
exec --no-startup-id compton -b --config ~/.config/compton/compton.conf

# wallpaper
# exec --no-startup-id ~/.config/wallpaper/pick.sh &
bindsym $mod+Scroll_Lock exec --no-startup-id ~/.config/scripts/wallpaper/pick.sh &

# polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# for alsa/amixer
set $inc --no-startup-id amixer sset Master 2%+
set $biginc --no-startup-id amixer sset Master 5%+
set $dec --no-startup-id amixer sset Master 2%-
set $bigdec --no-startup-id amixer sset Master 5%-
set $mute --no-startup-id amixer sset Master toggle
set $truemute --no-startup-id amixer sset Master mute

# for pulseaudio/pamixer
#set $inc --no-startup-id pamixer --allow-boost -i 2
#set $biginc --no-startup-id pamixer --allow-boost -i 6
#set $dec --no-startup-id pamixer --allow-boost -d 2
#set $bigdec --no-startup-id pamixer --allow-boost -d 6
#set $mute --no-startup-id pamixer --allow-boost -t
#set $micmute --no-startup-id pamixer --allow-boost -t
#set $truemute --no-startup-id pamixer -m

# for mpc
set $music --no-startup-id $term -e ncmpcpp
set $pause --no-startup-id mpc toggle
set $trupause --no-startup-id mpc pause
set $next --no-startup-id mpc next
set $prev --no-startup-id mpc prev
set $lilfor --no-startup-id mpc seek +10
set $bigfor --no-startup-id mpc seek +120
set $lilbak --no-startup-id mpc seek -10
set $bigbak --no-startup-id mpc seek -120
set $beg --no-startup-id mpc seek 0%

# === dropdown windows ==

# background terminal
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] resize set 800 500
for_window [instance="dropdown"] move position center
exec --no-startup-id urxvt -name dropdown

# arithmetic window
for_window [instance="math"] floating enable
#for_window [instance="math"] resize set 800 300
for_window [instance="math"] move position center
for_window [instance="math"] move scratchpad
#exec --no-startup-id $term -fn "xft:mono:pixelsize=24" -name math -e R -q

# === basic bindings ===

bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+Shift+Return exec $term -e tmux

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+Escape workspace prev
bindsym $mod+Shift+Escape exec i3-msg exit

# === letter bindings ===
bindsym $mod+q kill
bindsym $mod+Shift+q kill

bindsym $mod+Shift+e exit

bindsym $mod+Shift+w exec --no-startup-id $browser

bindwym $mod+f fullscreen toggle

bindsym $mod+r exec $term -e ranger

bindsym $mod+t split toggle
bindsym $mod+Shift+t gaps inner current set 6; gaps outer current set 3 

bindsym $mod+u [instance="dropdown"] scratchpad show; move position center

bindsym $mod+Shift+y resize shrink width 5 px or 5 ppt

#bindsym $mod+Shift+u exec --no-startup-id urxvt -name dropdown
bindsym $mod+Shift+u resize shrink height 5 px or 5 ppt

bindsym $mod+i exec $term -e htop
bindsym $mod+Shift+i resize grow height 5 px or 5 ppt

bindsym $mod+Shift+o resize grow width 5 px or 5 ppt

bindsym $mod+p exec $pause

bindsym $mod+a [instance="math"] scratchpad show; move position center
bindsym $mod+Shift+a exec $term -e alsamixer

bindsym $mod+s gaps inner current plus 2
bindsym $mod+Shift+s gaps inner current minus 2

bindsym $mod+d exec rofi -show run
bindsym $mod+Shift+d gaps inner current set 0; gaps outer current set 0

bindsym $mod+f fullscreen toggle

bindsym $mod+h focus left
bindsym $mod+Shift+h move left

bindsym $mod+j focus down
bindsym $mod+Shift+j move down

bindsym $mod+k focus up
bindsym $mod+Shift+k move up

bindsym $mod+l focus right
bindsym $mod+Shift+l move right

bindsym $mod+z gaps outer current plus 4
bindsym $mod+Shift+z gaps outer current minus 4

bindsym $mod+Shift+m exec $mute

# === workspace bindings ===

# general workspace bindings
bindsym $mod+Tab workspace back_and_forth

# application switch
#bindsym $mod+grave container back_and_forth

# set workspace names
set $WS1 1:one
set $WS2 2:two
set $WS3 3:three
set $WS4 4:four
set $WS5 5:five
set $WS6 6:six
set $WS7 7:seven
set $WS8 8:eight
set $WS9 9:nine

# set outputs
set $OP1 DP-3
set $OP2 DP-4
set $OP3 DVI-D-0
set $OP4 HDMI-0

# workspaces to monitors
workspace $WS1 output $OP1
workspace $WS2 output $OP2
workspace $WS3 output $OP3
workspace $WS4 output $OP4
workspace $WS5 output $OP1
workspace $WS6 output $OP2
workspace $WS7 output $OP3
workspace $WS8 output $OP4

# move workspace to monitor
#bindsym $sup+1 move workspace to output $OP1
#bindsym $sup+2 move workspace to output $OP2
#bindsym $sup+3 move workspace to output $OP3

# reset workspace positions
#bindsym $sup+a move workspace to output left
#bindsym $sup+d move workspace to output right

# switch to workspaces
bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
bindsym $mod+7 workspace $WS7
bindsym $mod+8 workspace $WS8

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WS1; workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2; workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3; workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4; workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5; workspace $WS5
bindsym $mod+Shift+6 move container to workspace $WS6; workspace $WS6
bindsym $mod+Shift+7 move container to workspace $WS7; workspace $WS7
bindsym $mod+Shift+8 move container to workspace $WS8; workspace $WS8

# swap workspaces on monitors

bindsym $sup+1 exec --no-startup-id python ~/.config/scripts/switch.py $OP1
bindsym $sup+2 exec --no-startup-id python ~/.config/scripts/switch.py $OP2
bindsym $sup+3 exec --no-startup-id python ~/.config/scripts/switch.py $OP3
bindsym $sup+4 exec --no-startup-id python ~/.config/scripts/switch.py $OP4

# === numpad ===

#bindsym $mod+Left       focus left
#bindsym $mod+Down       focus down
#bindsym $mod+Up         focus up
#bindsym $mod+Right      focus right
#bindsym $mod+Shift+Left     move left
#bindsym $mod+Shift+Down     move down
#bindsym $mod+Shift+Up       move up
#bindsym $mod+Shift+Right    move right

bindsym KP_Left focus left
bindsym KP_Right focus right
bindsym KP_Up focus up
bindsym KP_Down focus down

# === function keys ===

bindsym Print exec --no-startup-id scrot
bindsym Shift+Print exec --no-startup-id scrot -u

bindsym $mod+plus       exec $inc
bindsym $mod+Shift+plus     exec $biginc
bindsym $mod+minus      exec $dec
bindsym $mod+Shift+minus    exec $bigdec
bindsym $mod+greater        exec $inc
bindsym $mod+Shift+greater  exec $biginc
bindsym $mod+less       exec $dec
bindsym $mod+Shift+less     exec $bigdec

# === media keys ===

bindsym XF86AudioMute		exec $mute
bindsym XF86AudioLowerVolume	exec $dec
bindsym XF86AudioRaiseVolume	exec $inc

bindsym $mod+bracketleft    exec $lilbak
bindsym $mod+Shift+bracketleft  exec $prev
bindsym $mod+bracketright   exec $lilfor
bindsym $mod+Shift+bracketright exec $next

# === i3 specific ===

# reload the configuration file
bindsym Mod1+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod1+Shift+r restart

# === lol ===

bindsym $mod+Shift+Delete exec $truemute ; exec $truepause ; workspace lmao ; exec $term -e htop ; exec $term -e ranger
