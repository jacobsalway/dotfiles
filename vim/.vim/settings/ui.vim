" true colour terminal
"set termguicolors
"set t_Co=256
"
" show matching brackets
set showmatch

" disable startup message
set shortmess+=I

" syntax highlighting
syntax on
set synmaxcol=512
filetype indent plugin on

" only render when necessary
set lazyredraw

" line numbers
set number
set relativenumber

" no line wrapping
set nowrap

" highlight cursor
set cursorline
